<p id="notice"><%= notice %></p>

<h1>Kitchen Staffs</h1>

<table>
  <thead>
    <tr>
      <th>Chef name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kitchen_staffs.each do |kitchen_staff| %>
      <tr>
        <td><%= kitchen_staff.chef_name %></td>
        <td><%= link_to 'Show', kitchen_staff %></td>
        <td><%= link_to 'Edit', edit_kitchen_staff_path(kitchen_staff) %></td>
        <td><%= link_to 'Destroy', kitchen_staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


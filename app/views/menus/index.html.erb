<div class="container">
<p id="notice"><%= notice %></p>

<h1>Menu</h1>
  <div class="row">
  <% @menus.each do |menu| %>
  <div class="col-md-4">
     <div class="menu-box">
      <% if menu.image? %>
       <%= link_to (image_tag menu.image.url, class: "menu-index"), menu %>
      <% end %>

      <ul>
        <h5><li><%= menu.item_name %></li></h5>
        <li><%= menu.item_description %></li>
        <li><%="$" %><%= menu.item_price %></li>
        <% if admin_signed_in? %>
          <%= link_to 'Show', menu %>
          <%= link_to 'Edit', edit_menu_path(menu) %>
          <%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </ul>
  </div>  
    <br>
   </div>
  <% end %>
</div> <!--/row-->
<br>
</div>

<%= link_to 'New Menu', new_menu_path %>
